    <!-- Textové pole -->
    <div class="text-frame">
        <input type="text" id="text_field" class="text-field" />
    </div>

    <div class="container">
        <!-- Formulářový rámeček -->
        <div class="form-frame">
            <!-- ikony pro nápovědu -->
            <form method="post">
@*
                <!-- První vstup -->
